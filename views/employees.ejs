<link rel="stylesheet" href="/css/bgColor.css">

<div class="container-fluid pt-4 bgColor">
    <h2 class="text-center">All Employees</h2>
    <div
        class="container mt-4 table-responsive shadow-lg p-3 mb-5 bg-body-tertiary rounded">
        <table class="table table-hover align-middle ">
            <thead>
                <tr>
                    <th scope="col">EmpId</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Admin</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
             <% for(let i=0;i<users.length;i++){ %>
                <tr>
                    <th scope="row"><%= i+1 %></th>
                    <td><%= users[i].name %></td>
                    <td><%= users[i].email  %></td>
                    <td><%= users[i].isAdmin  %></td>
                    <td>
                        <% if(users[i]._id!=locals.user.id){ %>
                        <a href="/admin/delete/<%= users[i]._id  %>" class="btn btn-danger">
                            Delete
                        </a>
                        <% } %>
                    </td>
                    <td>
                        <a href="/admin/edit/<%= users[i]._id  %>" class="btn btn-danger">
                            Edit
                        </a>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

