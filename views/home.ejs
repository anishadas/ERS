<link rel="stylesheet" href="/css/home.css">
<div class="main-container">
    <div class="width border">
        <div class="bg-success text-white border-bottom rounded border-dark">
            <div class="text-center fs-3 mx-auto fw-bold">
                Leave A Review
            </div>
        </div>
        <div>
            <% for(let r of recipients){ %> 
                <div class="card no-b ">
                    <div class="card-body">
                      <h5 class="card-title">To:<%= r.name %></h5>
                      <form action="/review/newReview/<%= r._id %>" method="get">
                        <textarea
                        class="form-control"
                        placeholder="Write a review"
                        id="floatingTextarea2"
                        name="newReview"
                        rows="5">
                        </textarea>
                        <div class="right-alligned m-10">
                            <button type="submit" class="btn btn-primary">submit </button>
                        </div>
                      </form>
                    </div>
                </div>
            <% }%>
        </div>
    </div>
    <div class="width border">
        <div class="bg-success text-white border-bottom rounded border-dark">
            <div class="text-center fs-3 mx-auto fw-bold">
                My Reviews
            </div>
        </div>
        <div>
            <% for(let i = 0; i < reviews.length; i++) { %>
                <div class="card ">
                    <div class="card-body">
                      <h5 class="card-title">From : <%= reviews[i].name %></h5>
                      <p class="card-text">message : <%= reviews[i].review %></p>
                      </form>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>